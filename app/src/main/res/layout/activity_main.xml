<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syberkeep.hackthespinner.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/spin_btn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spinner_imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/wheel" />

        <ImageView
            android:id="@+id/arrow_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/who_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:text="________"
                android:fontFamily="monospace"
                android:maxLength="10"
                android:padding="8dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/enter_edit_text_what"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="What?"
                android:maxLength="30"
                android:padding="8dp"
                android:singleLine="true"
                android:text="is Genius."
                android:textSize="22sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/name4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="textPersonName"
            android:layout_below="@+id/spinner_imageView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/name5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner_imageView"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/name3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/spinner_imageView"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/name2"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/name6"
            android:layout_alignBottom="@+id/name6"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/name6"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/name7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/name1"
            android:layout_alignBottom="@+id/name1"
            android:layout_toStartOf="@+id/name4"
            android:layout_marginEnd="20dp" />

        <EditText
            android:id="@+id/name1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/spin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="Spin"
        android:textSize="22sp" />

</RelativeLayout>
